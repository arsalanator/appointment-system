systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true

processManagement:
  timeZoneInfo: /usr/share/zoneinfo

net:
  port: {{ mongodb_port | default(27017) }}
  bindIp: {{ mongodb_bind_ip | default('127.0.0.1') }}

security:
  authorization: {{ mongodb_auth | default('disabled') }}